---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="Our Projects - Pro Temp LLC" description="View our portfolio of completed HVAC projects including residential and commercial installations, repairs, and maintenance work.">
  <Header />
  
  <main>
    <!-- Hero Section -->
    <section class="relative pt-24 pb-16 bg-gradient-to-br from-primary-900 via-primary-800 to-primary-700">
      <div class="absolute inset-0 bg-black/20"></div>
      <div class="relative z-10 container-custom text-center text-white">
        <h1 class="text-4xl md:text-5xl font-bold mb-6">
          Our Projects
        </h1>
        <p class="text-xl text-gray-200 max-w-3xl mx-auto">
          Explore our portfolio of successful HVAC installations, repairs, and maintenance projects for residential and commercial clients.
        </p>
      </div>
    </section>

    <!-- Project Categories -->
    <section class="section-padding bg-white">
      <div class="container-custom">
        <div class="text-center mb-16">
          <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
            Project Categories
          </h2>
          <p class="text-lg text-gray-600 max-w-3xl mx-auto">
            From residential comfort solutions to large commercial installations, we handle projects of all sizes with the same attention to detail.
          </p>
        </div>
        
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 mb-16">
