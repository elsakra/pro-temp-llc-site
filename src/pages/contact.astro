---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Contact from '../components/Contact.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="Contact Us - Pro Temp LLC" description="Contact Pro Temp LLC for professional HVAC services. Get a free quote, schedule service, or reach us for emergency HVAC repairs. Available 24/7.">
  <Header />
  
  <main>
    <!-- Hero Section -->
    <section class="relative pt-24 pb-16 bg-gradient-to-br from-primary-900 via-primary-800 to-primary-700">
      <div class="absolute inset-0 bg-black/20"></div>
      <div class="relative z-10 container-custom text-center text-white">
        <h1 class="text-4xl md:text-5xl font-bold mb-6">
          Contact Pro Temp LLC
        </h1>
        <p class="text-xl text-gray-200 max-w-3xl mx-auto">
          Ready to improve your comfort? Get in touch with our HVAC experts for a free consultation and quote.
        </p>
      </div>
    </section>

    <!-- Quick Contact Options -->
    <section class="section-padding bg-white">
      <div class="container-custom">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-16">
          <!-- Call Us -->
          <div class="card p-8 text-center">
            <div class="w-16 h-16 bg-gradient-to-br from-green-500 to-green-600 rounded-full flex items-center justify-center mx-auto mb-6">
              <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
              </svg>
            </div>
            <h3 class="text-xl font-semibold text-gray-900 mb-4">Call Us Now</h3>
            <p class="text-gray-600 mb-6">
              Speak directly with our HVAC experts for immediate assistance.
            </p>
            <a href="tel:+1-555-HVAC-PRO" class="btn-primary">
              (555) HVAC-PRO
            </a>
            <p class="text-sm text-gray-500 mt-2">24/7 Emergency Service</p>
          </div>

          <!-- Email Us -->
          <div class="card p-8 text-center">
            <div class="w-16 h-16 bg-gradient-to-br from-blue-500 to-blue-600 rounded-full flex items-center justify-center mx-auto mb-6">
              <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
              </svg>
            </div>
            <h3 class="text-xl font-semibold text-gray-900 mb-4">Email Us</h3>
            <p class="text-gray-600 mb-6">
              Send us your questions or request a detailed quote via email.
            </p>
            <a href="mailto:info@protemphvacr.com" class="btn-primary">
              Send Email
            </a>
            <p class="text-sm text-gray-500 mt-2">We respond within 2 hours</p>
          </div>

          <!-- Schedule Online -->
          <div class="card p-8 text-center">
            <div class="w-16 h-16 bg-gradient-to-br from-purple-500 to-purple-600 rounded-full flex items-center justify-center mx-auto mb-6">
              <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
              </svg>
            </div>
            <h3 class="text-xl font-semibold text-gray-900 mb-4">Schedule Service</h3>
            <p class="text-gray-600 mb-6">
              Book your HVAC service appointment at your convenience.
            </p>
            <a href="#contact-form" class="btn-primary">
              Schedule Now
            </a>
            <p class="text-sm text-gray-500 mt-2">Free estimates available</p>
          </div>
        </div>
      </div>
    </section>

    <!-- Emergency Service Banner -->
    <section class="bg-red-50 border-y border-red-200 py-8">
      <div class="container-custom">
        <div class="flex flex-col md:flex-row items-center justify-between">
          <div class="flex items-center space-x-4 mb-4 md:mb-0">
            <div class="w-12 h-12 bg-red-500 rounded-full flex items-center justify-center">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"></path>
              </svg>
            </div>
            <div>
              <h3 class="text-lg font-semibold text-gray-900">HVAC Emergency?</h3>
              <p class="text-gray-600">We're available 24/7 for urgent repairs</p>
            </div>
          </div>
          <a href="tel:+1-555-HVAC-PRO" class="btn-primary bg-red-600 hover:bg-red-700">
            Call Emergency Line: (555) HVAC-PRO
          </a>
        </div>
      </div>
    </section>

    <!-- Main Contact Section -->
    <div id="contact-form">
      <Contact />
    </div>

    <!-- Map Section (Placeholder) -->
    <section class="section-padding bg-gray-50">
      <div class="container-custom">
        <div class="text-center mb-12">
          <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
            Visit Our Location
          </h2>
          <p class="text-lg text-gray-600 max-w-3xl mx-auto">
            Stop by our office or service center to discuss your HVAC needs in person.
          </p>
        </div>
        
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
          <!-- Map Placeholder -->
          <div class="bg-gray-200 rounded-2xl h-96 flex items-center justify-center">
            <div class="text-center text-gray-500">
              <svg class="w-16 h-16 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
              </svg>
              <p class="text-lg font-medium">Interactive Map</p>
              <p class="text-sm">123 Main Street, Your City</p>
            </div>
          </div>
          
          <!-- Location Details -->
          <div class="space-y-8">
            <div>
              <h3 class="text-2xl font-semibold text-gray-900 mb-6">Location Details</h3>
              <div class="space-y-4">
                <div class="flex items-start space-x-4">
                  <div class="w-8 h-8 bg-primary-100 rounded-lg flex items-center justify-center flex-shrink-0 mt-1">
                    <svg class="w-5 h-5 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                    </svg>
                  </div>
                  <div>
                    <h4 class="font-semibold text-gray-900">Address</h4>
                    <p class="text-gray-600">123 Main Street<br>Your City, State 12345</p>
                  </div>
                </div>
                
                <div class="flex items-start space-x-4">
                  <div class="w-8 h-8 bg-primary-100 rounded-lg flex items-center justify-center flex-shrink-0 mt-1">
                    <svg class="w-5 h-5 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                  </div>
                  <div>
                    <h4 class="font-semibold text-gray-900">Office Hours</h4>
                    <div class="text-gray-600 space-y-1">
                      <p>Monday - Friday: 8:00 AM - 6:00 PM</p>
                      <p>Saturday: 9:00 AM - 4:00 PM</p>
                      <p>Sunday: Emergency Only</p>
                    </div>
                  </div>
                </div>
                
                <div class="flex items-start space-x-4">
                  <div class="w-8 h-8 bg-primary-100 rounded-lg flex items-center justify-center flex-shrink-0 mt-1">
                    <svg class="w-5 h-5 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
                    </svg>
                  </div>
                  <div>
                    <h4 class="font-semibold text-gray-900">Parking</h4>
                    <p class="text-gray-600">Free parking available on-site</p>
                  </div>
                </div>
              </div>
            </div>
            
            <div>
              <h3 class="text-2xl font-semibold text-gray-900 mb-4">Directions</h3>
              <p class="text-gray-600 mb-4">
                We're conveniently located in the heart of the city, easily accessible from major highways and public transportation.
              </p>
              <ul class="text-gray-600 space-y-2">
                <li>• From Highway 101: Take Exit 15, turn right on Main Street</li>
                <li>• From Downtown: Head north on Main Street for 2 miles</li>
                <li>• Public Transit: Bus Route 42 stops directly in front</li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- FAQ Section -->
    <section class="section-padding bg-white">
      <div class="container-custom">
        <div class="text-center mb-16">
          <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
            Frequently Asked Questions
          </h2>
          <p class="text-lg text-gray-600 max-w-3xl mx-auto">
            Get quick answers to common questions about our HVAC services and processes.
          </p>
        </div>
        
        <div class="max-w-4xl mx-auto space-y-6">
          <div class="card p-6">
            <h3 class="text-lg font-semibold text-gray-900 mb-3">
              How quickly can you respond to emergency calls?
            </h3>
            <p class="text-gray-600">
              We offer 24/7 emergency service with typical response times of 2-4 hours, depending on your location and the severity of the issue.
            </p>
          </div>
          
          <div class="card p-6">
            <h3 class="text-lg font-semibold text-gray-900 mb-3">
              Do you provide free estimates?
            </h3>
            <p class="text-gray-600">
              Yes! We provide free, no-obligation estimates for all HVAC installations and major repairs. Contact us to schedule your free consultation.
            </p>
          </div>
          
          <div class="card p-6">
            <h3 class="text-lg font-semibold text-gray-900 mb-3">
              What areas do you serve?
            </h3>
            <p class="text-gray-600">
              We serve the greater metropolitan area including Your City and surrounding communities within a 50-mile radius. Call us to confirm service in your area.
            </p>
          </div>
          
          <div class="card p-6">
            <h3 class="text-lg font-semibold text-gray-900 mb-3">
              Are you licensed and insured?
            </h3>
            <p class="text-gray-600">
              Absolutely. We are fully licensed, bonded, and insured for your protection and peace of mind. All our technicians are certified professionals.
            </p>
          </div>
          
          <div class="card p-6">
            <h3 class="text-lg font-semibold text-gray-900 mb-3">
              What payment methods do you accept?
            </h3>
            <p class="text-gray-600">
              We accept cash, checks, and all major credit cards. We also offer financing options for larger installations and repairs.
            </p>
          </div>
        </div>
      </div>
    </section>
  </main>
  
  <Footer />
</Layout>