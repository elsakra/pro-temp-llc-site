---
export interface Props {
  title: string;
  subtitle: string;
  ctaText?: string;
  ctaLink?: string;
  backgroundImage?: string;
}

const { 
  title, 
  subtitle, 
  ctaText = "Get Free Quote", 
  ctaLink = "/contact",
  backgroundImage 
} = Astro.props;
---

<section class="relative min-h-screen flex items-center justify-center overflow-hidden">
  <!-- Background -->
  <div class="absolute inset-0 bg-gradient-to-br from-primary-900 via-primary-800 to-primary-700">
    <div class="absolute inset-0 bg-black/20"></div>
    <!-- Animated background pattern -->
    <div class="absolute inset-0 opacity-10">
      <div class="absolute top-1/4 left-1/4 w-64 h-64 bg-white rounded-full mix-blend-overlay animate-float"></div>
      <div class="absolute top-3/4 right-1/4 w-48 h-48 bg-white rounded-full mix-blend-overlay animate-float" style="animation-delay: -2s;"></div>
      <div class="absolute top-1/2 left-1/2 w-32 h-32 bg-white rounded-full mix-blend-overlay animate-float" style="animation-delay: -4s;"></div>
    </div>
  </div>

  <!-- Content -->
  <div class="relative z-10 container-custom text-center text-white">
    <div class="max-w-4xl mx-auto space-y-8">
      <h1 class="hero-title text-4xl md:text-5xl lg:text-6xl font-bold leading-tight opacity-0">
        {title}
      </h1>
      
      <p class="hero-subtitle text-lg md:text-xl lg:text-2xl text-gray-200 max-w-3xl mx-auto leading-relaxed opacity-0">
        {subtitle}
      </p>
      
      <div class="hero-cta flex flex-col sm:flex-row gap-4 justify-center items-center opacity-0">
        <a href={ctaLink} class="btn-primary text-lg px-8 py-4">
          {ctaText}
        </a>
        <a href="tel:+1-555-HVAC-PRO" class="btn-secondary text-lg px-8 py-4 bg-white/10 border-white text-white hover:bg-white hover:text-primary-600">
          Call Now: (555) HVAC-PRO
        </a>
      </div>
      
      <!-- Trust indicators -->
      <div class="flex flex-wrap justify-center items-center gap-8 pt-8 text-sm text-gray-300">
        <div class="flex items-center space-x-2">
          <svg class="w-5 h-5 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
            <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
          </svg>
          <span>Licensed & Insured</span>
        </div>
        <div class="flex items-center space-x-2">
          <svg class="w-5 h-5 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
          <span>24/7 Emergency Service</span>
        </div>
        <div class="flex items-center space-x-2">
          <svg class="w-5 h-5 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1"></path>
          </svg>
          <span>Free Estimates</span>
        </div>
      </div>
    </div>
  </div>

  <!-- Scroll indicator -->
  <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 text-white animate-bounce">
    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
    </svg>
  </div>
</section>